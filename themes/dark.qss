QMainWindow {
    background-color: #2d2d2d;
}

/* Set background color and text color for QLineEdit */
QLineEdit {
    background-color: #4d4d4d;
    color: #ffffff;
    border-bottom: 2px solid #ffffff;
    font-size: 16px;
    padding-left: 6px;
}
QLineEdit:focus {
    border-bottom: 2px solid #1e90ff;
    
    }
QComboBox {
    background-color: #3e3e3e;
    color: #ffffff;
    border-bottom: 2px solid #ffffff;
    font-size: 16px;
}

/* Set text color for QLabel */
QLabel {
    color: #ffffff;
    font-size: 16px;
}

