QPushButton{

	padding: 2px;
	background-color: qlineargradient(spread:pad, x1:0.5, y1:1, x2:0.5, y2:0, stop:0 #141719, stop:1 #31363b);
	text-transform: uppercase;
	font-weight: bold;
  color: #007acc;
  border: 2px solid #007acc;
	border-style: outset;

  border-radius: 4px;
  height: 32px;
  font-size:14px;
}
/* Add hover effect for QPushButton */
QPushButton:hover {
    border-color: #e7e7e7;
    color: #e7e7e7;
}

/* Set background color and text color for QMenuBar */
QMenuBar {
    background-color: #2d2d2d;
    color: #ffffff;
}